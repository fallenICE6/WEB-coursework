datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Review {
  id      Int      @id @default(autoincrement())
  name    String
  comment String
}

model Portfolio {
  id          Int      @id @default(autoincrement())
  title       String   // Название завершенного проекта
  imageUrl    String   // URL изображения
  resourceUrl  String   // Ссылка на ресурс
}

model User {
  id           Int      @id @default(autoincrement())
  username     String   @unique
  email        String   @unique
  password     String   // Хеш пароля
  role         String   @default("USER") // Роль пользователя: USER или ADMIN
  services     UserService[]
}

model Service {
  id       Int      @id @default(autoincrement())
  title    String
  price    Float
  users    UserService[]
  description   String
  LongDescription String
}

model UserService {
  id        Int      @id @default(autoincrement())
  userId    Int
  serviceId Int
  user      User     @relation(fields: [userId], references: [id])
  service   Service  @relation(fields: [serviceId], references: [id])
  
  @@unique([userId, serviceId]) // Уникальность для сочетания пользователь-услуга
}

model ContentItem {
  id          Int      @id @default(autoincrement())
  imageUrl    String
  title       String
  description String 
}

